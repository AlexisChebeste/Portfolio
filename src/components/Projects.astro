---
const PROJECTS = [
    {
        title: 'Maximus Hardware',
        descripction: 'Plantilla de portafolio web responsiva para desarrolladores, con secciones de proyectos, habilidades y contacto. Ideal para mostrar trabajos y experiencias de forma clara y profesional.',
        image: '/projects/project.webp',
        tags: ['Astro', 'Tailwind CSS'],
        link: 'https://github.com/AlexisChebeste/proyecto-web-astro'
    },
    {
        title: 'Maximus Hardware',
        descripction: 'Plantilla de portafolio web responsiva para desarrolladores, con secciones de proyectos, habilidades y contacto. Ideal para mostrar trabajos y experiencias de forma clara y profesional.',
        image: '/projects/project.webp',
        tags: ['Astro', 'Tailwind CSS'],
        link: 'https://github.com/AlexisChebeste/proyecto-web-astro'
    }
]
---

{
    PROJECTS.map(({title, descripction,tags, image, link})=> (
        <article class="flex flex-col md:flex-row gap-6">
            <div class="w-full md:w-1/2">
                <img class="rounded border border-gray-800 mb-3" src={image} alt={`Captura de pantalla del proyecto ${image}`} loading="lazy">
            </div>
            
            <div class="w-full md:w-1/2">
                <h3 class="text-2xl font-medium mb-2 text-yellow-300">{title}</h3>
            
                <ul class="flex gap-4 mb-2">
                    {
                        tags.map(tag => (
                            <li>{tag}</li>
                        ))
                    }
                </ul>
                <p class="text-base text-pretty text-gray-400 mb-6">{descripction}</p>
                
                <a target="_blank" href={link} class="rounded-xl border border-gray-700 px-4 py-2 text-base bg-gray-100 dark:bg-gray-800" >
                    Más Información
                </a>
            </div>
        </article>
    ))
}