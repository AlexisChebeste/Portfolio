---
import {Image} from "astro:assets";
import projectImage from '../assets/projects/project.webp';

const PROJECTS = [
    {
        title: 'Maximus Hardware',
        description: 'Plantilla de portafolio web responsiva para desarrolladores, con secciones de proyectos, habilidades y contacto. Ideal para mostrar trabajos y experiencias de forma clara y profesional.',
        image: projectImage,
        tags: ['Astro', 'Tailwind CSS'],
        link: 'https://github.com/AlexisChebeste/proyecto-web-astro'
    },
    {
        title: 'Maximus Hardware',
        description: 'Plantilla de portafolio web responsiva para desarrolladores, con secciones de proyectos, habilidades y contacto. Ideal para mostrar trabajos y experiencias de forma clara y profesional.',
        image: projectImage,
        tags: ['Astro', 'Tailwind CSS'],
        link: 'https://github.com/AlexisChebeste/proyecto-web-astro'
    }
]
---
<div class="flex flex-col gap-16">
    {
        PROJECTS.map(({title,description,image,tags,link}) => (
            <article class="flex flex-col md:flex-row justify-between gap-10">
                <div class="w-full md:w-1/2">
                    <Image src={image} alt="Pagina Web de Maximus Hardware" class="rounded-3xl border border-gray-800 mb-3 " width={960} height={540}/>
                    
                </div>
                
                <div class="w-full md:w-1/2">
                    <h3 class="text-2xl font-medium mb-2 text-gray-900  dark:text-yellow-300">{title}</h3>
                
                    <ul class="flex gap-4 mb-2">
                        {tags.map(tag => (
                                <li>{tag}</li>
                            ))
                        }
                    </ul>
                    <p class="text-base text-pretty  text-gray-900 dark:text-gray-400 mb-6">{description}</p>
                    
                    <a target="_blank" href={link} class="rounded-xl border border-gray-700 px-4 py-2 text-base bg-gray-100 dark:bg-gray-800 hover:scale-110 hover:bg-gray-800 hover:text-white dark:hover:bg-white dark:hover:text-black transition" >
                        Más Información
                    </a>
                </div>
            </article>
        ))
    }
</div>