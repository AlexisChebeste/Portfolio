
<button id="theme-toggle" aria-label="Cambiar tema">
    Tema
  </button>
  
  <script>
    const themeToggleBtn = document.getElementById('theme-toggle');
    const root = document.documentElement;
  
    // Comprobar si el usuario ya tiene un tema guardado en localStorage
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme) {
      root.classList.toggle('dark', currentTheme === 'dark');
    } else {
      // Aplicar el tema por defecto según el sistema operativo del usuario
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      root.classList.toggle('dark', prefersDark);
    }
  
    // Cambiar el tema cuando el usuario haga clic en el botón
    themeToggleBtn.addEventListener('click', () => {
      const isDarkMode = root.classList.toggle('dark');
      localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');
    });
  </script>
  